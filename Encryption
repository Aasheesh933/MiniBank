#include <stdio.h>

char encrypt(char user[],char pass[],char ifsc[])
{
int i;
for(i=1;user[i-1]!='\0';i++)
{
user[i-1]=(int)user[i-1]-i;	
}
for(i=1;pass[i-1]!='\0';i++)
{
pass[i-1]=(int)pass[i-1]-i;	
}
for(i=1;ifsc[i-1]!='\0';i++)
{
ifsc[i-1]=(int)ifsc[i-1]-i;	
}
	
}


int main()
{
char a[100],b[100],c[100];
printf("Enter User Name:");
scanf("%[^\n]",a);
printf("Enter Password:");
scanf("%s",b);
printf("Enter Ifsc:");
scanf("%s",c);

encrypt(a,b,c);

printf("User:%s\nPassword:%s\nIfsc:%s",a,b,c);

return 0;
}
